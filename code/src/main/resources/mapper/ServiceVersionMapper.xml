<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jettech.code.mapper.ServiceVersionMapper">
    <resultMap id="ServiceVersionMap" type="com.jettech.code.entity.ServiceVersion">
        <id property="id" column="id"/>
        <result property="serviceId" column="service_id"/>
        <result property="version" column="version"/>
        <result property="commitId" column="commit_id"/>
        <result property="description" column="description"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select id="findByServiceId" resultMap="ServiceVersionMap">
        SELECT * FROM service_version WHERE service_id = #{serviceId} ORDER BY created_at DESC
    </select>

    <select id="findById" resultMap="ServiceVersionMap">
        SELECT * FROM service_version WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.jettech.code.entity.ServiceVersion" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO service_version (service_id, version, commit_id, description, created_at)
        VALUES (#{serviceId}, #{version}, #{commitId}, #{description}, #{createdAt})
    </insert>

    <update id="update" parameterType="com.jettech.code.entity.ServiceVersion">
        UPDATE service_version
        SET version = #{version}, commit_id = #{commitId}, description = #{description}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM service_version WHERE id = #{id}
    </delete>

    <delete id="deleteByServiceId">
        DELETE FROM service_version WHERE service_id = #{serviceId}
    </delete>
</mapper>
