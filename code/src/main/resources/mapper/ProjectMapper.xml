<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jettech.code.mapper.ProjectMapper">

    <resultMap id="BaseResultMap" type="com.jettech.code.entity.Project">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="git_url" property="gitUrl"/>
        <result column="local_path" property="localPath"/>
        <result column="current_branch" property="currentBranch"/>
        <result column="last_commit" property="lastCommit"/>
        <result column="last_analyzed_at" property="lastAnalyzedAt"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, git_url, local_path, current_branch, last_commit, last_analyzed_at, created_at
    </sql>

    <insert id="insert" parameterType="com.jettech.code.entity.Project" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO projects (name, git_url, local_path, current_branch, last_commit, last_analyzed_at, created_at)
        VALUES (#{name}, #{gitUrl}, #{localPath}, #{currentBranch}, #{lastCommit}, #{lastAnalyzedAt}, #{createdAt})
    </insert>

    <update id="update" parameterType="com.jettech.code.entity.Project">
        UPDATE projects
        SET name = #{name},
            git_url = #{gitUrl},
            local_path = #{localPath},
            current_branch = #{currentBranch},
            last_commit = #{lastCommit},
            last_analyzed_at = #{lastAnalyzedAt}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM projects WHERE id = #{id}
    </delete>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM projects
        WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM projects
        ORDER BY created_at DESC
    </select>

    <select id="selectByGitUrl" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM projects
        WHERE git_url = #{gitUrl}
    </select>

    <select id="existsByGitUrl" resultType="boolean">
        SELECT COUNT(*) > 0 FROM projects WHERE git_url = #{gitUrl}
    </select>

</mapper>
