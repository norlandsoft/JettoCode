<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jettech.code.mapper.ApplicationMapper">
    <resultMap id="ApplicationMap" type="com.jettech.code.entity.Application">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findAll" resultMap="ApplicationMap">
        SELECT * FROM application ORDER BY created_at DESC
    </select>

    <select id="findById" resultMap="ApplicationMap">
        SELECT * FROM application WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.jettech.code.entity.Application" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO application (name, description, created_at, updated_at)
        VALUES (#{name}, #{description}, #{createdAt}, #{updatedAt})
    </insert>

    <update id="update" parameterType="com.jettech.code.entity.Application">
        UPDATE application
        SET name = #{name}, description = #{description}, updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM application WHERE id = #{id}
    </delete>
</mapper>
